{
  "name": "lmnp-frontend",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/lmnp/frontend/src",
  "projectType": "application",
  "tags": [],
  "// targets": "to see all targets run: nx show project lmnp-frontend --web",
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "dependsOn": ["^build"],
      "options": {
        "outputPath": "apps/lmnp/frontend/dist"
      },
      "defaultConfiguration": "production",
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "mode": "production"
        }
      }
    },
    "serve": {
      "executor": "@nx/vite:dev-server",
      "dependsOn": ["^build"],
      "options": {
        "buildTarget": "lmnp-frontend:build:development",
        "hmr": true
      },
      "configurations": {
        "development": {},
        "production": {
          "buildTarget": "lmnp-frontend:build:production",
          "hmr": false
        }
      }
    },
    "preview": {
      "executor": "@nx/vite:preview-server",
      "dependsOn": ["^build"],
      "options": {
        "buildTarget": "lmnp-frontend:build:production"
      },
      "configurations": {
        "production": {
          "buildTarget": "lmnp-frontend:build:production"
        }
      }
    }
  }
}
